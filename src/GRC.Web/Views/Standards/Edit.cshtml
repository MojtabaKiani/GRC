@model StandardViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Standard</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Standard.Name" class="control-label"></label>
                <input asp-for="Standard.Name" class="form-control" />
                <span asp-validation-for="Standard.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Standard.ReleaseYear" class="control-label"></label>
                <input asp-for="Standard.ReleaseYear" class="form-control" />
                <span asp-validation-for="Standard.ReleaseYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Standard.StandardCategoryId" class="control-label"></label>
                <select asp-for="Standard.StandardCategoryId" class="form-control" asp-items="Model.StandardCategories"></select>
                <span asp-validation-for="Standard.StandardCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Standard.Description" class="control-label"></label>
                <textarea asp-for="Standard.Description" class="form-control" ></textarea>
                <span asp-validation-for="Standard.Description" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Standard.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
