@model GRC.Core.Entities.Question

@{
    ViewData["Title"] = "Question Details";
}

<h1>Question Details</h1>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<div>
    <hr />
    <h5>@Model.Text</h5>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Weight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Weight)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Group)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Group)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<hr />
<h3>Answer List</h3>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.QuestionAnswers.GetEnumerator().Current.AnswerText)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.QuestionAnswers.GetEnumerator().Current.Value)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.QuestionAnswers.GetEnumerator().Current.IsCorrectAnswer)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.QuestionAnswers)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AnswerText)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsCorrectAnswer)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
