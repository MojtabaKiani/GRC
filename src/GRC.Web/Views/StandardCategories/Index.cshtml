@model IEnumerable<GRC.Core.Entities.StandardCategory>

@{
    ViewData["Title"] = "Standard Categories";
}

<h1>Manage Standard Categories</h1>

<p>
    <a asp-action="Create" class="btn btn-info">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-light">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-light">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-light">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
