@model QuestionaryViewModel

@{
    ViewData["Title"] = "Create New Questionary";
}

<h1>Create New Questionary</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StandardId" class="control-label"></label>
                <select asp-for="StandardId" class="form-control" asp-items="Model.Standards"></select>
            </div>
            <div class="form-group">
                <label asp-for="ComplianceLevel" class="control-label"></label>
                <input asp-for="ComplianceLevel" class="form-control" />
                <span asp-validation-for="ComplianceLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
